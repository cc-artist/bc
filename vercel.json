{
  "version": 2,
  "installCommand": "cd backend && npm install --legacy-peer-deps",
  "buildCommand": "cd backend && npm run build",
  "builds": [
    {
      "src": "backend/src/server.js",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "NODE_VERSION": "20.x"
  }
}